{
  "name": "xod",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "XOD monorepo package",
  "license": "AGPL-3.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "benchmark:browser": "lerna run benchmark --scope xod-client-browser --stream",
    "build": "lerna run build",
    "build:browser": "lerna run build --scope xod-client-browser --include-filtered-dependencies",
    "build:cli": "lerna run build --scope xod-cli --include-filtered-dependencies",
    "build:electron": "lerna run build --scope xod-client-electron --include-filtered-dependencies",
    "clean": "yarn run clean:dist && yarn run clean:node_modules",
    "clean:dist": "rimraf packages/*/dist packages/xod-cli/bin packages/xod-client-electron/src-babel",
    "clean:node_modules": "rimraf node_modules packages/*/node_modules",
    "dev:browser": "lerna run --stream --no-sort dev --scope xod-client-browser --include-filtered-dependencies",
    "dev:cli": "lerna run --stream --no-sort dev --scope xod-cli --include-filtered-dependencies",
    "dev:electron": "lerna run --stream --no-sort dev --scope xod-client-electron --include-filtered-dependencies",
    "dist:electron": "electron-builder --publish always --projectDir ./packages/xod-client-electron",
    "doc": "lerna run doc",
    "doc:fz": "cd docs && make",
    "lerna": "lerna",
    "lint": "eslint packages/*/src packages/*/test packages/*/test-func --ext js,jsx --max-warnings 0",
    "start:electron": "lerna run start --scope xod-client-electron --stream",
    "start:spectron-repl": "./tools/spectron-repl",
    "storybook": "lerna run storybook --stream --scope xod-client",
    "test": "XOD_HM_DEF=true lerna run test",
    "test-strict": "XOD_HM_DEF=strict lerna run test",
    "test-func": "lerna run test-func",
    "test-cpp": "lerna run test-cpp",
    "verify": "yarn build && yarn lint && yarn test && yarn test-cpp && yarn test-func",
    "xodc": "node packages/xod-cli/bin/xodc.js"
  },
  "devDependencies": {
    "@google-cloud/storage": "^1.1.0",
    "autoprefixer": "^6.5.1",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.16.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.16.0",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.7",
    "docopt": "^0.6.2",
    "documentation": "^4.0.0-beta12",
    "eslint": "^3.7.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-mocha": "^4.9.0",
    "eslint-plugin-react": "6.10.0",
    "eslint-plugin-xod-fp": "^0.1.1",
    "exports-loader": "^0.6.3",
    "file-loader": "^1.1.6",
    "findup-sync": "^2.0.0",
    "imports-loader": "^0.7.1",
    "lerna": "2.2.0",
    "mocha": "^3.3.0",
    "mocha-webpack": "^0.6.0",
    "node-sass": "^3.10.1",
    "postcss": "^5.2.5",
    "postcss-loader": "^1.1.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "spectron": "^3.7.2",
    "style-loader": "^0.19.1",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.6",
    "webpack-merge": "^4.1.1"
  }
}
